<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>

	<div class="card mt-4">
	  <div class="card-header">
	     <h5 class="card-title">Actualitzar prove√Ødor</h5>
	  </div>
	  <div class="card-body">
    
    <% if (typeof data !=='undefined' ) { %> 

	   	<form method="POST" action="/llistatProveidor/update/<%= data._id %>">
				
        <div class="form-group">
          <label for="numDeficiencies">Numero de deficiencies</label>
          <input type="text" name="numDeficiencies" id="numDeficiencies" class="form-control"  value="<%= data.numDeficiencies %>">
          <% if (errors && errors.find(e=> e.param === 'numDeficiencies')) { %>
            <p class="alert alert-danger" role="alert">
              <%= errors.find(e=> e.param === 'numDeficiencies').msg %>
            </p>
          <% } %>
        </div>
        <div class="form-group">
          <label for="numIncorreccions">Numero de incorreccions</label>
          <input type="text" name="numIncorreccions" id="numIncorreccions" class="form-control"  value="<%= data.numIncorreccions %>">
          <% if (errors && errors.find(e=> e.param === 'numIncorreccions')) { %>
            <p class="alert alert-danger" role="alert">
              <%= errors.find(e=> e.param === 'numIncorreccions').msg %>
            </p>
          <% } %>
        </div>

				<button type="submit" class="btn btn-primary">Save</button>
			</form>

      <% } else { %>
          <form method="POST" action="/llistatProveidor/update/<%= data._id %>">
           
            <div class="form-group">
              <label for="numDeficiencies">Numero de deficiencies</label>
              <input type="text" name="numDeficiencies" id="numDeficiencies" class="form-control"  value="<%= data.numDeficiencies %>">
              <% if (errors && errors.find(e=> e.param === 'numDeficiencies')) { %>
                <p class="alert alert-danger" role="alert">
                  <%= errors.find(e=> e.param === 'numDeficiencies').msg %>
                </p>
              <% } %>
            </div>
            <div class="form-group">
              <label for="numIncorreccions">Numero de incorreccions</label>
              <input type="text" name="numIncorreccions" id="numIncorreccions" class="form-control"  value="<%= data.numIncorreccions %>">
              <% if (errors && errors.find(e=> e.param === 'numIncorreccions')) { %>
                <p class="alert alert-danger" role="alert">
                  <%= errors.find(e=> e.param === 'numIncorreccions').msg %>
                </p>
              <% } %>
            </div>
   
           <button type="submit" class="btn btn-primary">Save</button>
         </form>
      <% } %>
      
			<% if (typeof error !== "undefined") { %>
				<div class="alert alert-primary mt-2" role="alert">   <p><%= error %></p>
				</div>
			<% } %>

	  </div>
	</div>
	

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>