<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Login</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
  <!-- FontAwesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- Custom CSS -->
  <style>
    .bg-lightblue {
      background-color: #cce5ff;
    }
    .input-group-text {
      background-color: transparent;
      border: none;
    }
    .card-header {
      font-weight: bold;
      font-size: 2rem;
      padding: 1rem;
      border: none;

    }
    .card-subtitle {
      font-size: 1rem;
      padding-bottom: 1rem;
      text-align: center;
    }
    .custom-card {
      margin-top: 50px; 
      box-shadow: 0 0 10px rgba(19, 17, 17, 0.61); /*box-shadow */

    }
    .logo-container {
      display: flex;
      justify-content: center;
      margin-bottom: 20px; 
      margin-top: 20px; 

    }
    .logo {
      width: 300px;
    }
    .card-body {
      padding: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card bg-lightblue custom-card">
          <div class="logo-container">
              <!--imagen del logo -->
              <img src="https://www.vidalibarraquer.net/moodle/pluginfile.php/1/core_admin/logo/0x200/1665741390/logo.png" alt="Logo Vidalibarraquer" class="logo">
            </div>
          <div class="card-header text-center">
            Login
            <div class="card-subtitle">
              Please enter your login and password!
            </div>
          </div>
          <div class="card-body">
            
            
            <form action="/auth/login" method="post">
              <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <label for="inputGmail" class="form-label visually-hidden">Gmail</label>
                <input type="email" class="form-control" id="inputGmail" name="gmail" placeholder="Gmail" required>
              </div>
              <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
                <label for="inputContrasenya" class="form-label visually-hidden">Contrasenya</label>
                <input type="password" class="form-control" id="inputContrasenya" name="contrasenya" placeholder="Contrasenya" required>
              </div>
              <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Sign in</button>
              </div>
            </form>
            <% if (typeof error !== 'undefined') {%>
                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>