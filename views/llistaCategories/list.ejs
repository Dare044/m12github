<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl7/1L_dstPt3HV5HzF6Gvk/e3F2qWsULf0D2OxDEe" crossorigin="anonymous">
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="card mt-2">
    
    <div class="card-header">
      <h5 class="card-title">Llista de categories</h5>
    </div>

    <div class="card-body">
      
      <table class="table table-striped">
        <thead>
          <tr>          
            <th scope="col">Concepte</th>
            <th scope="col">Nom</th>
            <th scope="col">Descripcio</th>
            <th scope="col">Quantitat demanat</th>
            <th scope="col">Cost total</th>
            <th scope="col">
              <a href="/llistaCategoria/create" class="btn btn-primary">New</a>
            </th>
          </tr>
        </thead>
        <tbody>
          <% list.forEach( function(llistaCategoria) { %>
            <tr>          
              <td><%= llistaCategoria.concepte %></td>
              <td><%= llistaCategoria.nom %></td>
              <td><%= llistaCategoria.descripcio %></td>
              <td><%= llistaCategoria.numDemanats %></td>
              <td><%= llistaCategoria.costTotal %></td>
              <td>                
                <a class="btn btn-danger" href="/llistaCategoria/delete/<%=llistaCategoria._id%>" class="card-link">Delete</a>
              </td>          
            </tr>
          <% }); %>        
        </tbody>
      </table>

      <!-- Paginación -->
      
	  <ul class="pagination justify-content-center">
		<li class="page-item disabled">
			<a class="page-link" href="#" tabindex="-1">Previous</a>
		  </li>
		<% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === page ? 'active' : '' %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
          <% } %>
		<li class="page-item">
		  <a class="page-link" href="#">Next</a>
		</li>
	  </ul>
	</nav>
	 
	 
	  
      <!-- Fin Paginación -->
