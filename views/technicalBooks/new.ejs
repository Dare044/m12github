<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>

	<div class="card mt-4">
	  <div class="card-header">
	     <h5 class="card-title">New Technical Book</h5>
	  </div>
	  <div class="card-body">

	   	<form method="POST" action="/technicalBook/create">
				<div class="form-group">
					 <label for="title">Title</label>
					 <input type="text" name="title" class="form-control">
				</div>
				<div class="form-group">
				<label for="publisher">Publisher</label>
				<select name="publisher" id="publisher" class="form-control">
				<% publisher_list.forEach( function(publisher) { %>
					         
					      <option value="<%= publisher.id %>"><%= publisher.name %></option>
		   		<% }); %>	
			   	</select>
					
				</div>
				<div class="form-group">
					 <label for="summary">Summary</label>
					 <textarea name="summary" class="form-control"> </textarea>
				</div>
				<div class="form-group">
					 <label for="isbn">ISBN</label>
					 <input type="text" name="isbn" class="form-control">
				</div>
				<div class="form-group">
					 <label for="">Author 1: </label>
					 	<div class="form-row">
					 		<div class="col">
					 			<input type="text" name="author[0][firstname]" class="form-control" placeholder="First name">
					 		</div>
					 		<div class="col">
					 			<input type="text" name="author[0][lastname]" class="form-control" placeholder="Last name">
					 		</div>
						</div>
					 <label for="name">Author 2: </label>
					 	<div class="form-row">
					 		<div class="col">
					 			<input type="text" name="author[1][firstname]" class="form-control" placeholder="First name">
					 		</div>
					 		<div class="col">
					 			<input type="text" name="author[1][lastname]" class="form-control" placeholder="Last name">
					 		</div>
						</div>
					 <label for="name">Author 3: </label>
					 <div class="form-row">
					 		<div class="col">
					 			<input type="text" name="author[2][firstname]" class="form-control" placeholder="First name">
					 		</div>
					 		<div class="col">
					 			<input type="text" name="author[2][lastname]" class="form-control" placeholder="Last name">
					 		</div>
						</div>
				</div>
				<div class="form-group">
					 <label for="name">GÃ©neres</label>
						<% genre_list.forEach( function(genre) { %>
						<div class="form-check">
						  <input class="form-check-input" name="genre" type="checkbox" value="<%= genre.id %>">
						  <label class="form-check-label" for="defaultCheck1">
						    <%= genre.name %>
						  </label>
						</div>
						<% }); %>	
						
				</div>
				<button type="submit" class="btn btn-primary">Save</button>
			</form>

			<% if (typeof error !== "undefined") { %>
				<div class="alert alert-primary mt-2" role="alert">   <p><%= error %></p>
				</div>
			<% } %>

	  </div>
	</div>
	

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>