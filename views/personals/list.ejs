<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
	<div class="card mt-2">
		
		<div class="card-header">
	     <h5 class="card-title">Llistat del personal</h5>
	  </div>

    <div class="card-body">
	    
			<table class="table table-striped">
		  		<thead>
				    <tr>		      
				      <th scope="col">Nom</th>
				      <th scope="col">Cognoms</th>
				      <th scope="col">Gmail</th>
					  <th scope="col">Familia</th>
					  <th scope="col">Carrecs</th>
					  <th scope="col">Contrasenya</th>
				      <th scope="col">
				      	<a href="/personal/create" class="btn btn-primary">New</a>
				      </th>
				    </tr>
		  		</thead>
					<tbody>
			  		<% list.forEach( function(Personal) { %>
					    <tr>		      
					      <td><%= Personal.nom %></td>
					      <td><%= Personal.cognoms %></td>
					      <td><%= Personal.gmail %></td>
						  <td><%= Personal.familia %></td>
						  <td><%= Personal.id %></td>
						  <td><%= Personal.contrasenya %></td>
					      <td>					      	
					      	<a class="btn btn-secondary" href="/personal/update/<%=Personal._id%>" class="card-link">Edit</a>
					      </td>		      
					    </tr>
			   		<% }); %>	     
			    </tbody>
		  </table>	     
	    
		</div>
		
	</div>
 
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>