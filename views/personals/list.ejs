<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
	<div class="card mt-2">
		
		<div class="card-header">
	     <h5 class="card-title">Llistat del personal</h5>
	  </div>

    <div class="card-body">
	    
			<table class="table table-striped">
		  		<thead>
				    <tr>		      
				      <th scope="col">Nom</th>
				      <th scope="col">Cognoms</th>
				      <th scope="col">Carrec</th>
				      <th scope="col">Gmail</th>
					  <th scope="col">Contrasenya</th>
				      <th scope="col">
				      	<a href="/personal/create" class="btn btn-primary">New</a>
				      </th>
				    </tr>
		  		</thead>
					<tbody>
			  		<% list.forEach( function(Personal) { %>
					    <tr>		      
					      <td><%= Personal.Nom %></td>
					      <td><%= Personal.Cognoms %></td>
					      <td><%= Personal.Carrec %></td>
					      <td><%= Personal.Gmail %></td>
						  <td><%= Personal.contrasenya %></td>
					      <td>					      	
					      	<a class="btn btn-secondary" href="/personal/update/<%=Personal._id%>" class="card-link">Edit</a>
					      </td>		      
					    </tr>
			   		<% }); %>	     
			    </tbody>
		  </table>	     
	     <!-- Paginación -->
	  <ul class="pagination justify-content-center">
		<li class="page-item disabled">
			<a class="page-link" href="#" tabindex="-1">Previous</a>
		  </li>
		<% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === page ? 'active' : '' %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
          <% } %>
		<li class="page-item">
		  <a class="page-link" href="#">Next</a>
		</li>
	  </ul>
	</nav>
      <!-- Fin Paginación -->
		</div>
		
	</div>
 
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>