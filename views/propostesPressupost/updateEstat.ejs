<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>

	<div class="card mt-4">
	  <div class="card-header">
	     <h5 class="card-title">Editar Proposta de Pressupost</h5>
	  </div>
	  <div class="card-body">
	
		<form method="POST" action="/propostaPressupost/updateEstat/<%= propostaPressupost._id %>">
			<div class="form-group">
				 <label for="estat">Estat</label>
				<input type="text" name="estat" class="form-control" value="<%= propostaPressupost.estat%>">
			</div>
			<button type="submit" class="btn btn-primary">Save
			</button>

		</form>

		<% if (typeof error !== "undefined") { %>
			<div class="alert alert-primary mt-2" role="alert">
			    <p><%= error %></p>
			</div>
		<% } %>

		<% if (typeof message !== "undefined") { %>
			<div class="alert alert-primary mt-2" role="alert">
			    <p><%= message %></p>
			</div>
		<% } %>

	</div>
		
	</div>

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>