<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
	<div class="card mt-2">
		
		<div class="card-header">
	     <h5 class="card-title">Llista de categories</h5>
	  </div>

    <div class="card-body">
	    
			<table class="table table-striped">
		  		<thead>
				    <tr>		      
                        <th scope="col">Concepte</th>
                        <th scope="col">Full Comanda</th>
                        <th scope="col">Descripcio</th>
                        <th scope="col">Objectiu</th>
						<th scope="col">Quantitat</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Prioritat</th>
						

				      <th scope="col">
				      	<a href="/propostaPressupost/create" class="btn btn-primary">New</a>
				      </th>
				    </tr>
		  		</thead>
			  	<tbody>
			  		<% list.forEach( function(propostaPressupost) { list_LlistaCategoria.forEach ( function(llistaCategoria) {%>
					    <tr>		
							<% if (propostaPressupost.idConcepte == llistaCategoria.id ) { %>
					      <td><%= llistaCategoria.concepte%></td>
							<% } }); %>
                          <td><%= propostaPressupost.idFullComanda %></td>
                          <td><%= propostaPressupost.descripcio %></td>
                          <td><%= propostaPressupost.objectiu %></td>
						  <td><%= propostaPressupost.quantitat %></td>
						  <td><%= propostaPressupost.valor %></td>
                          <% if (propostaPressupost.prioritat == 0 ) { %>
							<td> Denegada </td>	
							  <% } else { %>
							<td><%= propostaPressupost.prioritat %> </td>
							 <% }; %>
					      <td>					      	
					      	<a class="btn btn-info" href="/propostaPressupost/update/<%=propostaPressupost._id%>" class="card-link">Update</a>
					      </td>		      
					    </tr>
			   		<% }); %>	     
			    </tbody>
		  </table>	     
	    
		</div>
		
	</div>
 
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>