<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %> 

</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
	<div class="card mt-2">
		<div class="card-header">
	        <h5 class="card-title">Llista d'elements</h5>
	    </div>
    <div class="card-body"> 
		<table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Quantitat</th>
                    <th scope="col">Descripcio</th>
                    <th scope="col">Objectiu</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Operacions</th>
                </tr>
            </thead>
            <tbody>
                <% list_Element.forEach( function(element) { %>
                    <tr>
                        <td><%= element.nom %></td>
                        <td><%= element.quantitat %></td>
                        <td><%= element.descripcio %></td> 
                        <td><%= element.objectiu %></td>
                        <td><%= element.valor %> </td>	
                        <td>
                            <a class="btn btn-danger" href="/element/delete/<%=element._id%>" class="card-link">Delete</a>
                            <a class="btn btn-info" href="/element/show/<%=element._id%>" class="card-link">Show</a>
                        </td>				      	
                    </tr>
                <% }); %>	     
            </tbody>
        </table>	     
    <!-- Paginación -->
	  <ul class="pagination justify-content-center">
		<li class="page-item disabled">
			<a class="page-link" href="#" tabindex="-1">Previous</a>
		  </li>
		<% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === page ? 'active' : '' %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
          <% } %>
		<li class="page-item">
		  <a class="page-link" href="#">Next</a>
		</li>
	  </ul>
	</nav>
      <!-- Fin Paginación -->
	</div>
 
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>