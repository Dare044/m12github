<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %> 

</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
	<div class="card mt-2">
		<div class="card-header">
	        <h5 class="card-title">Llista d'elements</h5>
	    </div>
        <div class="container text-center">
            <div class="row">
            <div class="col-2"><a href="/element/createPropostaPressupost" class="btn btn-dark" name="tipusDeProposta" value="pressupost">Proposta de Pressupost</a></div>
            <div class="col-2"><a href="/element/createPropostaNecessitat" class="btn btn-dark" name="tipusDeProposta" value="necessitat">Proposta de Necessitat</a></div>
        </div>
        </div>
    <div class="card-body"> 
		<table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Quantitat</th>
                    <th scope="col">Descripcio</th>
                    <th scope="col">Objectiu</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Operacions</th>
                </tr>
            </thead>
            <tbody>
                <% list_Element.forEach( function(element) { %>
                    <tr>
                        <td><%= element.nom %></td>
                        <td><%= element.quantitat %></td>
                        <td><%= element.descripcio %></td> 
                        <td><%= element.objectiu %></td>
                        <td><%= element.valor %> </td>	
                        <td>
                            <a class="btn btn-danger" href="/element/delete/<%=element._id%>" class="card-link">Delete</a>
                            <a class="btn btn-info" href="/element/show/<%=element._id%>" class="card-link">Show</a>
                        </td>				      	
                    </tr>
                <% }); %>	     
            </tbody>
        </table>	     
	</div>
 
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>